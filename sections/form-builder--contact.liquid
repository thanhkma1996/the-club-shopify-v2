{%- if section.blocks.size > 0 -%}

  {%- assign submit_text = 'customer.register.submit' | t -%}

  {%- include 'form-builder' with form_type: 'contact', form_class: 'contact', form_prefix: 'contact' -%}

{%- endif -%}

{%- schema %}
  {
    "name": "Contact Form",
    "class": "contact-form-section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Form Name"
      },
      {
        "type": "url",
        "id": "redirect_url",
        "label": "Redirect form to"
      },
      {
        "type": "checkbox",
        "id": "hide_form",
        "label": "Hide form if submission is successful",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_atrix",
        "label": "Show Label*",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_optional",
        "label": "Show (optional)",
        "default": false
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Form Heading"
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Form Description"
      },
      {
        "type": "select",
        "id": "position",
        "label": "Description Position",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center"
      }
    ],
    "blocks": [
      {
        "name": "Additional Settings",
        "type": "additional_settings",
        "limit": 1,
        "settings": [
          {
            "type": "richtext",
            "id": "success_message",
            "label": "Success Message",
            "info":"The message displayed once the form is successfully submitted"
          },
          {
            "type": "richtext",
            "id": "error_message",
            "label": "Error Message",
            "info":"The message displayed if the form is unsuccessful on submission"
          }
        ]
      },
      {
        "name": "Text Input",
        "type": "text_input",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Input Label"
          },
          {
            "type": "text",
            "id": "id",
            "label": "Input Id"
          },
          {
            "type": "select",
            "id": "position",
            "label": "Label Display",
            "options": [
              {
                "value": "none",
                "label": "Display None"
              },
              {
                "value": "top",
                "label": "Top"
              },
              {
                "value": "right",
                "label": "Right"
              },
              {
                "value": "bottom",
                "label": "Bottom"
              },
              {
                "value": "left",
                "label": "Left"
              }
            ],
            "default": "none"
          },
          {
            "type": "checkbox",
            "id": "is_required",
            "label": "Required",
            "default": true
          },
          {
            "type": "range",
            "id": "width",
            "min": 0,
            "max": 12,
            "step": 1,
            "unit": "col",
            "label": "Width on page",
            "default": 12
          }
        ]
      },
      {
        "name": "Textarea",
        "type": "text_textarea",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Textarea Label"
          },
          {
            "type": "text",
            "id": "id",
            "label": "Textarea Id"
          },
          {
            "type": "select",
            "id": "position",
            "label": "Label Display",
            "options": [
              {
                "value": "none",
                "label": "Display None"
              },
              {
                "value": "top",
                "label": "Top"
              },
              {
                "value": "right",
                "label": "Right"
              },
              {
                "value": "bottom",
                "label": "Bottom"
              },
              {
                "value": "left",
                "label": "Left"
              }
            ],
            "default": "none"
          },
          {
            "type": "checkbox",
            "id": "is_required",
            "label": "Required",
            "default": true
          },
          {
            "type": "range",
            "id": "width",
            "min": 0,
            "max": 12,
            "step": 1,
            "unit": "col",
            "label": "Width on page",
            "default": 12
          }
        ]
      },
      {
        "name": "Dropdown",
        "type": "text_dropdown",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Input Label"
          },
          {
            "type": "text",
            "id": "id",
            "label": "Input Id"
          },
          {
            "type": "textarea",
            "id": "options",
            "label": "Dropdown Options",
            "info":"A coma sepeated list of options for the dropdown"
          },
          {
            "type": "select",
            "id": "position",
            "label": "Label Display",
            "options": [
              {
                "value": "none",
                "label": "Display None"
              },
              {
                "value": "top",
                "label": "Top"
              },
              {
                "value": "right",
                "label": "Right"
              },
              {
                "value": "bottom",
                "label": "Bottom"
              },
              {
                "value": "left",
                "label": "Left"
              }
            ],
            "default": "none"
          },
          {
            "type": "checkbox",
            "id": "is_required",
            "label": "Required",
            "default": true
          },
          {
            "type": "range",
            "id": "width",
            "min": 0,
            "max": 12,
            "step": 1,
            "unit": "col",
            "label": "Width on page",
            "default": 4
          }
        ]
      },
      {
        "name": "Single Checkbox",
        "type": "text_singlecheckbox",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Input Label"
          },
          {
            "type": "text",
            "id": "id",
            "label": "Input Id"
          },
          {
            "type": "checkbox",
            "id": "is_required",
            "label": "Required",
            "default": false
          },
          {
            "type": "range",
            "id": "width",
            "min": 0,
            "max": 12,
            "step": 1,
            "unit": "col",
            "label": "Width on page",
            "default": 12
          }
        ]
      },
      {
        "name": "Multiple Checkboxes",
        "type": "text_multiplecheckboxes",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Multiple Checkboxes Heading"
          },
          {
            "type": "textarea",
            "id": "options",
            "label": "Checkbox Options",
            "info":"A coma sepeated list of labels for each checkbox"
          },
          {
            "type": "text",
            "id": "id",
            "label": "Input Id"
          },
          {
            "type": "checkbox",
            "id": "is_required",
            "label": "Required",
            "default": true
          },
          {
            "type": "range",
            "id": "width",
            "min": 0,
            "max": 12,
            "step": 1,
            "unit": "col",
            "label": "Width on page",
            "default": 12
          }
        ]
      },
      {
        "name": "Multiple Radio buttons",
        "type": "text_multipleradiobuttons",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Multiple Radios Heading"
          },
          {
            "type": "textarea",
            "id": "options",
            "label": "Radio Button Options",
            "info":"A coma sepeated list of text for each radiobutton"
          },
          {
            "type": "text",
            "id": "id",
            "label": "Input Id"
          },
          {
            "type": "checkbox",
            "id": "is_required",
            "label": "Required",
            "default": true
          },
          {
            "type": "checkbox",
            "id": "show_input",
            "label": "Provide text field for Last option",
            "default": false
          },
          {
            "type": "text",
            "id": "extra_field",
            "label": "Input Label"
          }
        ]
      },
      {
        "name": "Submit Button",
        "type": "text_submit_button",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Submit Button Text"
          },
          {
            "type": "range",
            "id": "width",
            "min": 0,
            "max": 12,
            "step": 1,
            "unit": "col",
            "label": "Width on page",
            "default": 12
          }
        ]
      }
    ],
    "default": {
      "settings": {
        "title": "Contact",
        "redirect_url": "",
        "hide_form": true,
        "show_atrix": false,
        "show_optional": false,
        "heading": "Have Questions",
        "description": "<p>If you have any enquires, leave us a message and we will respond to your enquiry within 24 hours<\/p>",
        "position": "left"
      },
      "blocks": [
        {
          "type": "text_input",
          "settings": {
            "title": "Full Name",
            "id": "name",
            "position": "none",
            "is_required": true,
            "width": 6
          }
        },
        {
          "type": "text_input",
          "settings": {
            "title": "Contact Number",
            "id": "phone",
            "position": "none",
            "is_required": true,
            "width": 6
          }
        },
        {
          "type": "text_input",
          "settings": {
            "title": "Email Address",
            "id": "email",
            "position": "none",
            "is_required": true,
            "width": 12
          }
        },
       {
          "type": "text_textarea",
          "settings": {
            "title": "Message",
            "id": "message",
            "position": "none",
            "is_required": true,
            "width": 12
          }
        },
       {
          "type": "text_submit_button",
          "settings": {
            "title": "Send",
            "width": 4
          }
        }
      ]
    }
  }
{% endschema -%}
