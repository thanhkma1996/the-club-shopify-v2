{% unless customer %}
  {% comment %}
    {%- include 'page-header' -%}
  {% endcomment %}
  {% assign class = 'wishlist--not-customer' %}
{% endunless %}

<div class="wishlist {{ class }}">

  <div class="row">
    <div class="col-xs-12">
      <section class="wishlist__section">
        <h1 class="wishlist__title">{{ page.title }}</h1>

        <div class="rte wishlist__rte">
          {%- include 'text' with page.content -%}
        </div>
      </section>
    </div>
  </div>

  <div class="wishlist__container">
    <div class="row">
      <div class="col-xs-12">
        <!-- include 'wishlist-collection' -->
      </div>
    </div>
  </div>
</div>


